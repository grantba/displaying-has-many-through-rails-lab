<h2><%= @patient.name %>, your appointments are:</h2>
<ul>
<% @patient.appointments.each do |appt| %>
    <li><%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %> with Dr. <%= link_to appt.doctor.name, doctor_path(appt.doctor_id) %> from the <%= appt.doctor.department %> Department </li>
<% end %>
</ul>